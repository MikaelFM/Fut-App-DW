<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FutApp - Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-950">
<%- include('includes/menus', { page: 'stats' }) %>
<div class="py-4 sm:ml-64">
    <div class="py-5 px-2 md:px-10">
        <div class="max-w-4xl mx-auto mt-6">
            <div class="rounded-xl shadow-xl py-8 bg-gray-950">
                <div class="space-y-6">
                    <div class="bg-gray-950 rounded-lg p-6 border border-gray-700">
                        <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                            Resumo Geral
                        </h2>

                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div class="bg-gray-900 rounded-lg p-4 text-center">
                                <div class="text-3xl font-bold text-blue-400 mb-1"><%= user.jogos %></div>
                                <div class="text-sm text-gray-300">Jogos</div>
                            </div>

                            <div class="bg-gray-900 rounded-lg p-4 text-center">
                                <div class="text-3xl font-bold text-green-400 mb-1"><%= user.vitorias %></div>
                                <div class="text-sm text-gray-300">Vitórias</div>
                            </div>

                            <div class="bg-gray-900 rounded-lg p-4 text-center">
                                <div class="text-3xl font-bold text-red-400 mb-1"><%= user.derrotas %></div>
                                <div class="text-sm text-gray-300">Derrotas</div>
                            </div>

                            <div class="bg-gray-900 rounded-lg p-4 text-center">
                                <div class="text-3xl font-bold text-yellow-400 mb-1"><%= user.empates %></div>
                                <div class="text-sm text-gray-300">Empates</div>
                            </div>
                        </div>
                    </div>
                    <% if (user.jogos > 0) { %>
                    <div class="bg-gray-950 rounded-lg p-6 border border-gray-700">
                        <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                            Aproveitamento
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="bg-gray-900 rounded-lg p-4">
                                <div class="text-center">
                                    <div class="text-4xl font-bold text-green-400 mb-2"><%= (user.vitorias/user.jogos * 100).toFixed(2) %>%</div>
                                    <div class="text-sm text-gray-300 mb-3">Percentual de Vitórias</div>
                                    <div class="w-full bg-gray-700 rounded-full h-3">
                                        <div class="bg-green-400 h-3 rounded-full" style="width: <%= (user.vitorias/user.jogos * 100)%>%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-gray-900 rounded-lg p-4">
                                <div class="text-center">
                                    <div class="text-4xl font-bold text-blue-400 mb-2"><%= ((user.vitorias * 3 + user.empates) * 100 / (user.jogos * 3)).toFixed(2) %>%</div>
                                    <div class="text-sm text-gray-300 mb-3">Aproveitamento Geral</div>
                                    <div class="w-full bg-gray-700 rounded-full h-3 mt-2">
                                        <div class="bg-blue-400 h-3 rounded-full" style="width: <%= (user.vitorias * 3 + user.empates) * 100 / (user.jogos * 3) %>%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-950 rounded-lg p-6 border border-gray-700">
                        <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                            Últimos 5 Jogos
                        </h2>

                        <div class="flex justify-center items-center space-x-3 mb-4">
                            <div class="flex space-x-2">
                                <% user.ultimos_resultados.reverse().forEach((result, index) => { %>
                                <div class="bg-<%= resultsColor[result] %>-500 <%= index === 4 ? 'ring ring-' + resultsColor[result] + '-300' : ''%> w-12 h-12 rounded-full flex items-center justify-center font-bold text-white text-lg shadow-lg">
                                    <%= result %>
                                </div>
                                <% }) %>
                            </div>
                        </div>

                        <div class="text-center">
                            <div class="text-sm text-gray-400 mb-2">Sequência atual</div>
                        </div>
                    </div>

                    <div class="bg-gray-950 rounded-lg p-6 border border-gray-700">
                        <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                            Histórico Detalhado
                        </h2>

                        <% for (let event of events){ %>
                        <div class="space-y-3">
                            <div class="bg-gray-900 rounded-lg overflow-hidden">
                                <div class="p-4 flex items-center justify-between cursor-pointer hover:bg-gray-800 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div class="bg-<%= resultsColor[event.resultado_usuario] %>-500 w-8 h-8 rounded-full flex items-center justify-center font-bold text-white text-sm">
                                            <%= event.resultado_usuario %>
                                        </div>
                                        <div>
                                            <div class="text-white font-medium"><%= event.titulo %></div>
                                            <div class="text-gray-400 text-sm"><%= formatDate(event.data) %> - <%= event.hora_inicio %></div>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-4">
                                        <div class="text-right">
                                            <div class="text-white font-bold"><%= event.gols_time_1 %> x <%= event.gols_time_2 %></div>
                                            <div class="text-gray-400 text-sm"><%= event.local %></div>
                                        </div>
                                        <div class="text-gray-400">
                                            <svg class="w-5 h-5 transform transition-transform" id="arrow-game1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <div class="hidden px-4 pb-4" id="details-game1">
                                    <div class="border-t border-gray-700 pt-4">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <div class="bg-gray-800 rounded-lg p-3">
                                                <h4 class="font-semibold text-blue-400 mb-2 text-center">Time 1</h4>
                                                <div class="space-y-1">
                                                    <% for (let user of event.confirmados.filter((u) => u.team == 1)) { %>
                                                        <div class="text-white text-sm"><%= user.user_name %></div>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="bg-gray-800 rounded-lg p-3">
                                                <h4 class="font-semibold text-red-400 mb-2 text-center">Time 2</h4>
                                                <div class="space-y-1">
                                                    <% for (let user of event.confirmados.filter((u) => u.team == 2)) { %>
                                                        <div class="text-white text-sm"><%= user.user_name %></div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>

                    <div class="bg-gray-950 rounded-lg p-4 border border-gray-700">
                        <div class="flex justify-center items-center space-x-6 text-sm">
                            <div class="flex items-center space-x-2">
                                <div class="w-4 h-4 bg-green-500 rounded-full"></div>
                                <span class="text-gray-300">Vitória</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <div class="w-4 h-4 bg-red-500 rounded-full"></div>
                                <span class="text-gray-300">Derrota</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <div class="w-4 h-4 bg-yellow-500 rounded-full"></div>
                                <span class="text-gray-300">Empate</span>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="/js/tailwindConfig.js"></script>
<script src="/js/stats.js"></script>

</html>