<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FutApp - Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
</head>
<body class="bg-gray-950 text-white">
<%- include('includes/menus', { page: 'debts' }) %>
<div class="p-4 sm:ml-64">
    <div class="py-5 px-2 md:px-10">
        <div id="paymentsPage" class="page active py-6 space-y-6 mt-6">

            <input id="user-id" value="<%= user._id %>" type="hidden">
            <div class="bg-indigo-700 rounded-2xl shadow p-4">
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="font-semibold text-white">Valor Pendente</h3>
                        <div class="text-2xl font-bold text-white">R$ <%= formatMoney(user.total_dividas) %></div>
                        <div class="text-sm text-white <%= user.dividas.length > 0 ? '' : 'hidden' %>"><%= user.dividas.length %> partida(s) em aberto</div>
                    </div>
                    <div class="text-yellow-400 text-3xl">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
            </div>

            <div class="bg-gray-900 rounded-2xl shadow p-6 transition-transform duration-300">
                <h3 class="text-lg font-semibold mb-4 text-indigo-400">Débitos em Aberto</h3>

                <div class="space-y-4">
                    <% for (let divida of user.dividas) { %>
                        <div class="flex justify-between items-center pb-3">
                            <div>
                                <h4 class="font-semibold text-white">
                                    <%= divida.titulo %>
                                </h4>
                                <p class="text-sm text-gray-300">
                                    <%= formatDate(divida.data) %> - <%= divida.local %>
                                </p>
                            </div>

                            <div>
                                <span class="text-lg text-indigo-400 font-semibold">
                                    R$ <%= formatMoney(divida.valor) %>
                                </span>
                            </div>
                        </div>
                    <% } %>
                    <% if (user.dividas.length === 0) { %>
                        <p class="text-sm text-gray-300">Nenhum débito em aberto encontrado</p>
                    <% } %>
                </div>
            </div>

            <div class="bg-gray-900 text-indigo-400 rounded-2xl shadow p-6 transition-transform duration-300 <%= user.dividas.length > 0 ? '' : 'hidden' %>">
                <h3 class="text-lg font-semibold mb-4">Pagar Débitos</h3>

                <div class="bg-gray-800 rounded-lg p-4 flex justify-between items-center mb-6">
                    <span class="text-gray-300 font-medium">Total a pagar:</span>
                    <span class="text-xl font-bold text-gray-300">R$ <%= formatMoney(user.total_dividas) %></span>
                </div>

                <button onclick="openPixPayment()" class="w-full bg-indigo-700 hover:bg-indigo-600 text-white font-semibold py-3 rounded-xl shadow">
                    Pagar Tudo
                </button>
            </div>
        </div>

    </div>
</div>

<div id="pix-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-gray-900 rounded-xl max-w-md w-full max-h-screen overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold text-white">Pagamento PIX</h3>
                <button class="text-gray-400 hover:text-white" onclick="closePixModal()">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <div class="text-center">
                <div class="mb-6">
                    <h4 class="text-lg font-medium text-white mb-2">Total dos Jogos</h4>
                    <div class="text-4xl font-bold text-green-400 mb-2">R$ <%= formatMoney(user.total_dividas) %></div>
                </div>

                <div class="bg-white p-6 rounded-lg mb-6">
                    <div id="qr-code" class="flex items-center justify-center min-h-48">
                        <div class="text-gray-500">Gerando QR Code...</div>
                    </div>
                </div>

                <div class="bg-gray-800 rounded-lg p-4 mb-6">
                    <h4 class="text-white font-medium mb-3">PIX Copia e Cola</h4>
                    <div class="bg-gray-900 border border-gray-600 rounded p-3 mb-3">
                            <textarea
                                    id="pix-code"
                                    class="w-full bg-transparent text-white text-xs resize-none border-none outline-none"
                                    rows="4"
                                    readonly
                            ></textarea>
                    </div>
                    <button
                            onclick="copyPixCode()"
                            class="w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors flex items-center justify-center gap-2"
                    >
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                        </svg>
                        Copiar Código PIX
                    </button>
                </div>

                <div class="flex gap-3">
                    <button
                            class="flex-1 px-4 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded-lg font-medium transition-colors"
                            onclick="closePixModal()"
                    >
                        Fechar
                    </button>
                    <button
                            class="flex-1 px-4 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors"
                            onclick="confirmPayment()"
                    >
                        Já Paguei
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
<script src="/js/tailwindConfig.js"></script>
<script src="/js/debts.js"></script>
</html>
